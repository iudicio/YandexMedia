<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ================== Главные карточки (MainActivity) ================== -->




    <style name="MenuCardStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:background">@drawable/card_bg</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="MenuIconStyle">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:tint">@android:color/black</item>
    </style>

    <style name="MenuTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- ================== Общие стили для экрана Настроек ================== -->

    <!-- Стиль тулбара (верхняя панель с кнопкой Назад и заголовком) -->
    <style name="SettingsToolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">12dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- Стиль заголовка тулбара -->
    <style name="SettingsTitleText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:layout_marginStart">16dp</item>
    </style>

    <!-- Стиль иконки кнопки Назад -->
    <style name="SettingsBackIcon">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:tint">@color/color_black</item>
    </style>

    <!-- Контейнер одного пункта настроек -->
    <style name="SettingsItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:paddingVertical">12dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <!-- Текст пункта меню -->
    <style name="SettingsItemText">
        <item name="android:fontFamily">"@font/ys_display_medium</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Иконка справа в пункте -->
    <style name="SettingsItemIcon">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:tint">@color/color_black</item>
    </style>

</resources>
