<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingVertical="8dp"
    android:paddingHorizontal="16dp"
    android:gravity="center_vertical"
    android:background="?android:attr/selectableItemBackground">

    <!-- Обложка трека -->
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/artworkImageView"
        android:layout_width="@dimen/track_image_size"
        android:layout_height="@dimen/track_image_size"
        android:layout_marginEnd="@dimen/margin_large"
        android:scaleType="centerCrop"
        android:contentDescription="@string/content_album_art"
        app:shapeAppearanceOverlay="@style/RoundedImageStyle" />

    <!-- Текстовая часть -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Название трека -->
        <TextView
            android:id="@+id/trackNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ys_display_regular"
            android:textSize="16sp"
            android:lineHeight="19sp"
            android:textColor="@color/color_black"
            android:maxLines="1"
            android:ellipsize="end" />

        <!-- Исполнитель и длительность -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/artistNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ys_display_regular"
                android:textSize="11sp"
                android:textColor="@color/color_track_gray"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginEnd="4dp" />

            <ImageView
                android:id="@+id/dotSeparator"
                android:layout_width="3dp"
                android:layout_height="3dp"
                android:layout_marginEnd="4dp"
                android:src="@drawable/ellipse_1"
                android:tint="@color/color_track_gray" />

            <TextView
                android:id="@+id/trackTimeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ys_display_regular"
                android:textSize="11sp"
                android:textColor="@color/color_track_gray" />
        </LinearLayout>
    </LinearLayout>

    <!-- Стрелка -->
    <ImageView
        android:id="@+id/arrowRightImageView"
        android:layout_width="@dimen/track_arrow_width"
        android:layout_height="@dimen/track_arrow_height"
        android:layout_marginStart="16dp"
        android:src="@drawable/ic_arrow_right"
        android:tint="@color/color_track_gray"
        tools:ignore="UseAppTint" />

</LinearLayout>
