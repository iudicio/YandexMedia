<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_back_ground">

    <!-- Заголовок -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/backButton"
            style="@style/SettingsBackIcon"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="@string/content_back" />

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:fontFamily="@font/ys_display_medium"
            android:text="@string/title_search"
            android:textColor="@color/color_black"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Поле поиска -->
    <androidx.cardview.widget.CardView
        android:id="@+id/searchCard"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/header"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@color/color_gray_light"
            android:gravity="center_vertical"
            android:paddingHorizontal="8dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_search_search"
                android:layout_marginEnd="8dp" />

            <FrameLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/searchEditText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="@string/hint_search"
                    android:inputType="text"
                    android:paddingEnd="32dp"
                    android:singleLine="true"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/darker_gray"
                    android:fontFamily="@font/ys_display_regular" />

                <ImageView
                    android:id="@+id/clearButton"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/ic_clear"
                    android:visibility="gone" />
            </FrameLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Список результатов -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/searchResultsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/searchCard"
        android:padding="8dp"
        android:clipToPadding="false"
        android:scrollbars="vertical" />

    <!-- Плейсхолдер "ничего не найдено" -->
    <LinearLayout
        android:id="@+id/placeholderLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        android:padding="32dp"
        android:layout_below="@id/searchCard">

        <ImageView
            android:id="@+id/emptyImageView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_logo_media"
            android:layout_marginBottom="16dp"
            android:contentDescription="@string/nothing_found" />

        <TextView
            android:id="@+id/emptyTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ничего не нашлось"
            android:textColor="@color/color_black"
            android:textSize="16sp"
            android:fontFamily="@font/ys_display_medium" />
    </LinearLayout>

    <!-- Плейсхолдер "нет соединения" -->
    <LinearLayout
        android:id="@+id/networkErrorLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        android:padding="32dp"
        android:layout_below="@id/searchCard">

        <ImageView
            android:id="@+id/networkErrorImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/not_connection"
            android:layout_marginBottom="16dp"
            android:contentDescription="@string/network_error" />

        <TextView
            android:id="@+id/networkErrorTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/network_error"
            android:textColor="@color/color_black"
            android:textSize="18sp"
            android:fontFamily="@font/ys_display_medium"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/networkErrorSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/network_error2"
            android:textColor="@color/color_black"
            android:textSize="16sp"
            android:fontFamily="@font/ys_display_regular"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/retryButton"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="@string/update"
            android:textColor="@color/btn_update_text"
            android:textSize="14sp"
            android:fontFamily="@font/ys_display_medium"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:background="@drawable/rounded_button_dark"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:layout_marginTop="8dp" />

    </LinearLayout>

</RelativeLayout>
